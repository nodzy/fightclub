  <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="<%= (@user.lightsaber*20) %>" aria-valuemin="0" aria-valuemax="100" style="width:<%= (@user.lightsaber*20) %>%">

  </div>

